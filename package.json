{
  "name": "Quark",
  "version": "0.0.1",
  "description": "A new way to control electronics",
  "main": "index.js",
  "scripts": {
    "test": "mocha",
    "postinstall": "electron-builder install-app-deps",
    "pack-win": "electron-packager . --overwrite --asar=true --platform=win32 --arch=x64 --prune=true --out=release-builds ",
    "dist-win": "electron-builder --x64 --win --prepackaged release-builds/Quark-win32-x64",
    "dist-linux": "electron-builder --x64 --linux"
  },
  "build": {
    "publish": [
      {
        "provider": "generic",
        "url": "https://autoupdate.diymechatronics.com"
      }
    ],
    "appId": "in.nishkal",
    "productName": "Quark",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "appImage": {
      "systemIntegration": "ask",
      "license": "LICENSE"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE",
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "@capacitor/electron": "^1.0.0-beta.0",
    "electron-is-dev": "^0.3.0",
    "electron-updater": "^3.0.3",
    "express": "^4.16.3",
    "ip": "^1.1.5",
    "johnny-five": "^0.15.0",
    "performance-now": "^2.1.0",
    "socket.io": "^2.1.1",
    "usb": "^1.3.2"
  },
  "devDependencies": {
    "@types/firmata": "^0.19.0",
    "@types/ip": "0.0.31",
    "@types/serialport": "^6.0.3",
    "electron": "^2.0.3",
    "electron-builder": "^20.26.1",
    "electron-packager": "^12.1.0",
    "mocha": "^5.2.0",
    "spectron": "^3.8.0"
  },
  "keywords": [
    "Quark",
    "Electron"
  ],
  "author": "Nishkal Kashyap",
  "license": "Apache 2.0"
}
